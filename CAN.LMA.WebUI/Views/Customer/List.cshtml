@model IEnumerable<CustomerViewModel>
<a class="btn btn-success md-5" style="margin: 10px" asp-controller="Customer" asp-action="Create">Create new customer</a>

<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Borrowed books count</th>
        <th>Edit customer</th>
        <th>Delete customer</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var customerVM in Model)
    {
        <tr>
            <td>@customerVM.Customer.CustomerId</td>
            <td>@customerVM.Customer.Name</td>
            <td>@customerVM.BookCount</td>
            <td>
                <a class="btn btn-info glyphicon glyphicon-trash" asp-area="" asp-controller="Customer" asp-action="Update" asp-route-data="@customerVM.Customer">
                    Update
                </a>
            </td>
            <td>
                <a class="btn btn-danger" asp-area="" asp-controller="Customer" asp-action="Delete" asp-route-data="@customerVM.Customer.CustomerId">
                    Delete
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>