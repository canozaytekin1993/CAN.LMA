@model IEnumerable<Book>

<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Authors Name</th>
        <th>Lend a Book</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var book in Model)
    {
        <tr>
            <td>@book.BookId</td>
            <td>@book.Title</td>
            <td>@book.Author.Name</td>
            <td>
                <a class="btn btn-success" asp-area="" asp-controller="Lend" asp-action="LendBook"
                   asp-route-bookId="@book.BookId">
                    Lend
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>