@model Customer
<div class="row orderForm">
    <form asp-controller="Customer" asp-action="Create" method="post" class="form-horizontal" role="form">
        <h3 class="col=md-offset=2">Create new customer</h3>
        <div class="form-group">
            <input asp-form="Name" class="form-control" placeholder="Enter customers name"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="btn-group col-md-offset=2 col-md-6">
                <input class="btn btn-info" type="submit" value="Return" asp-controller="Customer" asp-action="List"/>
                <input class="btn btn-success" type="submit" value="Create"/>
            </div>
        </div>
    </form>
</div>