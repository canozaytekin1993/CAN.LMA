@model HomeViewModel
@{
    var availableBook = Model.BookCount - Model.LendBookCount;
}

<h1>Library Management Dashboard</h1>

<div class="row">
    <div class="col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Customer Count
            </div>
            <div class="panel-body">
                There are @Model.CustomerCount customers
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Authors Count
            </div>
            <div class="panel-body">
                There are @Model.AuthorCount authors
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Books Count
            </div>
            <div class="panel-body">
                There are @Model.BookCount books
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Lend Books Count
            </div>
            <div class="panel-body">
                There are @Model.LendBookCount books
            </div>
        </div>
    </div>
</div>