@model IEnumerable<Book>
<a class="btn btn-success mt-5" style="margin: 10px" asp-controller="Book" asp-action="Create">
    Create a new Book
</a>

<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Authors Name</th>
        <th>Edit Book</th>
        <th>Delete Book</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var book in Model)
    {
        <tr>
            <td>@book.BookId</td>
            <td>@book.Title</td>
            <td>@book.Author.Name</td>
            <td>
                <a class="btn btn-info" asp-area="" asp-controller="Book" asp-action="Update" asp-route-id="@book.BookId">
                    Edit
                </a>
            </td>
            <td>
                <a class="btn btn-danger" asp-area="" asp-controller="Book" asp-action="Delete" asp-route-id="@book
                .BookId" asp-route-authorId="@book.AuthorId">
                    Delete
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>