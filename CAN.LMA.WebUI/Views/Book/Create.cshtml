@model BookViewModel
<div class="row orderForm">
    <form asp-controller="Book" asp-action="Create" method="post" class="form-horizontal" role="form">
        <h3 class="col=md-offset=2">Create new book</h3>
        <div class="form-group">
            <label asp-for="Book.Author" class="col-md-2 control-label"></label>
            <div class="col-md-4">
                @Html.DropDownListFor(x => x.Book.AuthorId, new SelectList(Model.Authors.Select(x => new
                {
                    Value = x.AuthorId,
                    Text = x.Name
                }), "Value", "Text", new {@class = "form-control border-input"}))
                <span asp-validation-for="Book.Author" class="text-danger"></span>
            </div>
            <div class="col-md-2">
                <a class="btn btn-success" style="width: 100%" asp-controller="Author" asp-action="Create"></a>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Book.Title" class="col-md-2 control-label"></label>
            <div class="col=md=6">
                <input asp-for="Book.Title" class="form-control" placeholder="Enter book title"/>
                <span asp-validation-for="Book.Title" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group col-md-offset=2 col-md-6">
                <input class="btn btn-info" type="submit" value="Return" asp-controller="Book" asp-action="List"/>
                <input class="btn btn-success" type="submit" value="Create"/>
            </div>
        </div>
    </form>
</div>